<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#D3134DDC"
    android:gravity="center">

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="506dp"
        android:background="@drawable/blur_bg"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Login Here"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

<!--        <EditText-->
<!--            android:id="@+id/username"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/input_bg"-->
<!--            android:hint="Email or Phone"-->
<!--            android:inputType="textEmailAddress"-->
<!--            android:padding="11dp"-->
<!--            android:textColor="@android:color/white" />-->

        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:hint="Your ID"
            android:inputType="textPassword"
            android:padding="11dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="Log In"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Login with a social media account"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/social_icon_bg"
                android:contentDescription="Facebook Login"
                android:src="@drawable/ic_facebook" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/social_icon_bg"
                android:contentDescription="Twitter Login"
                android:src="@drawable/ic_twitter" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/social_icon_bg"
                android:contentDescription="Instagram Login"
                android:src="@drawable/ic_instagram" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
